<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TVC Studios - Todos os Projetos</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        
        /* Header */
        .header {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .header h1 {
            color: #333;
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        
        .header p {
            color: #666;
            font-size: 1.1em;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .stat-value {
            font-size: 2.5em;
            font-weight: bold;
            color: #667eea;
        }
        
        .stat-label {
            color: #666;
            margin-top: 10px;
        }
        
        .section-title {
            color: white;
            font-size: 1.8em;
            margin: 30px 0 20px 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .project-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }
        
        .project-card:hover {
            transform: translateY(-5px);
        }
        
        .project-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .project-name {
            font-size: 1.5em;
            font-weight: bold;
            color: #333;
        }
        
        .project-type {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.9em;
            background: #f0f0f0;
        }
        
        .project-progress {
            margin: 15px 0;
        }
        
        .progress-bar {
            width: 100%;
            height: 10px;
            background: #f0f0f0;
            border-radius: 5px;
            overflow: hidden;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            width: 0%;
        }
        
        .project-details {
            color: #666;
            margin: 15px 0;
        }
        
        .project-details p {
            margin: 5px 0;
        }
        
        .project-status {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: bold;
        }
        
        .status-producao { background: #d4edda; color: #155724; }
        .status-pre-producao { background: #fff3cd; color: #856404; }
        .status-desenvolvimento { background: #cce5ff; color: #004085; }
        .status-pos-producao { background: #d1ecf1; color: #0c5460; }
        
        .modules-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .module-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .module-card:hover {
            transform: scale(1.05);
            background: #667eea;
            color: white;
        }
        
        .module-icon {
            font-size: 3em;
            margin-bottom: 10px;
        }
        
        .videos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .video-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .video-thumb {
            height: 180px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3em;
        }
        
        .video-info {
            padding: 15px;
        }
        
        .video-title {
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .video-type {
            color: #667eea;
            font-size: 0.9em;
            margin-bottom: 10px;
        }
        
        .btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }
        
        .btn:hover {
            background: #764ba2;
        }
        
        .loading {
            text-align: center;
            color: white;
            padding: 50px;
            font-size: 1.2em;
        }
        
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.8);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        
        .modal.active {
            display: flex;
        }
        
        .modal-content {
            background: white;
            padding: 30px;
            border-radius: 15px;
            max-width: 800px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
        }
        
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .close {
            font-size: 2em;
            cursor: pointer;
            color: #666;
        }
        
        video {
            width: 100%;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>üì∫ TVC Studios</h1>
            <p>Plataforma Completa - Todos os Projetos em Desenvolvimento</p>
        </div>
        
        <!-- Stats -->
        <div class="stats-grid" id="stats">
            <div class="stat-card">
                <div class="stat-value" id="total-projetos">0</div>
                <div class="stat-label">Projetos Totais</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="projetos-ativos">0</div>
                <div class="stat-label">Em Produ√ß√£o</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="orcamento-total">R$ 0</div>
                <div class="stat-label">Or√ßamento Total</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="equity">R$ 0</div>
                <div class="stat-label">Equity</div>
            </div>
        </div>
        
        <!-- Nossos Projetos -->
        <h2 class="section-title">üé¨ NOSSOS PROJETOS</h2>
        <div class="projects-grid" id="projetos-lista"></div>
        
        <!-- M√≥dulos do Sistema -->
        <h2 class="section-title">‚öôÔ∏è M√ìDULOS DO SISTEMA</h2>
        <div class="modules-grid" id="modulos-lista"></div>
        
        <!-- V√≠deos -->
        <h2 class="section-title">üìπ V√çDEOS</h2>
        <div class="videos-grid" id="videos-lista"></div>
    </div>
    
    <!-- Modal do Player -->
    <div class="modal" id="player-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="video-title">Player</h2>
                <span class="close" onclick="document.getElementById('player-modal').classList.remove('active')">&times;</span>
            </div>
            <video id="video-player" controls>
                <source src="" type="video/mp4">
            </video>
        </div>
    </div>

    <script>
        // ========== DADOS FIXOS DOS PROJETOS ==========
        const projetos = [
            {
                id: 1,
                nome: "CATI√áO",
                tipo: "Filme",
                status: "P√≥s-produ√ß√£o",
                progresso: 90,
                visao: "üèòÔ∏è Comunidades",
                responsavel: "Carlos Alberto",
                orcamento: 800000,
                inicio: "2025-01-15",
                previsao: "2026-06-30",
                descricao: "Jovem negro se torna bandido famoso roubando √¥nibus na Cidade de Deus anos 90"
            },
            {
                id: 2,
                nome: "TEU SAMBA",
                tipo: "Novela",
                status: "Pr√©-produ√ß√£o",
                progresso: 30,
                visao: "üé≠ Cultural",
                responsavel: "Ana Paula",
                orcamento: 410000,
                inicio: "2025-08-15",
                previsao: "2026-06-05",
                descricao: "Jovem sambista busca sucesso enfrentando tradi√ß√£o e rivalidades"
            },
            {
                id: 3,
                nome: "TR√äM",
                tipo: "S√©rie",
                status: "Desenvolvimento",
                progresso: 45,
                visao: "üèòÔ∏è+üé≠+üé¨",
                responsavel: "Mariana Santos",
                orcamento: 1200000,
                inicio: "2024-09-01",
                previsao: "2026-08-15",
                descricao: "Jovens de diferentes periferias formam grupo de dan√ßa que se encontra no trem"
            },
            {
                id: 4,
                nome: "COSTA VERDE",
                tipo: "Novela",
                status: "Pr√©-produ√ß√£o",
                progresso: 40,
                visao: "üåä Litoral",
                responsavel: "Jo√£o Silva",
                orcamento: 400000,
                inicio: "2024-08-01",
                previsao: "2026-05-20",
                descricao: "Conflito hist√≥rico ressurge entre praias e florestas"
            },
            {
                id: 5,
                nome: "√î POSTINHO",
                tipo: "S√©rie",
                status: "Desenvolvimento",
                progresso: 25,
                visao: "üé¨ Cotidiano",
                responsavel: "Carla Santos",
                orcamento: 360000,
                inicio: "2024-09-20",
                previsao: "2026-08-30",
                descricao: "Posto de sa√∫de ca√≥tico da favela com humor e cr√≠tica social"
            }
        ];
        
        // ========== M√ìDULOS DO SISTEMA ==========
        const modulos = [
            { nome: "HUD em Tempo Real", icone: "üìä", acao: "hud" },
            { nome: "Dashboard Financeiro", icone: "üí∞", acao: "financeiro" },
            { nome: "Gerenciar Projetos", icone: "üìã", acao: "projetos" },
            { nome: "Processador de V√≠deos", icone: "üé¨", acao: "processar" },
            { nome: "Sistema de Legendas", icone: "üìù", acao: "legendas" },
            { nome: "Backup Autom√°tico", icone: "üíæ", acao: "backup" },
            { nome: "Relat√≥rios", icone: "üìà", acao: "relatorios" },
            { nome: "Ferramentas Externas", icone: "üõ†Ô∏è", acao: "ferramentas" }
        ];
        
        // ========== CARREGAR DADOS DA API ==========
        async function carregarDados() {
            try {
                // Stats da API
                const res = await fetch('/api/stats');
                const stats = await res.json();
                
                document.getElementById('total-projetos').innerText = projetos.length;
                document.getElementById('projetos-ativos').innerText = projetos.filter(p => p.progresso > 0 && p.progresso < 100).length;
                
                const orcamentoTotal = projetos.reduce((acc, p) => acc + p.orcamento, 0);
                document.getElementById('orcamento-total').innerText = 'R$ ' + orcamentoTotal.toLocaleString('pt-BR');
                document.getElementById('equity').innerText = 'R$ ' + stats.equity.toLocaleString('pt-BR');
                
            } catch(e) {
                console.log('Erro ao carregar stats:', e);
            }
        }
        
        // ========== MOSTRAR PROJETOS ==========
        function mostrarProjetos() {
            const div = document.getElementById('projetos-lista');
            div.innerHTML = '';
            
            projetos.forEach(p => {
                const statusClass = `status-${p.status.toLowerCase().replace('√ß', 'c').replace('√£', 'a').replace(' ', '-').replace('√≥', 'o')}`;
                
                const card = document.createElement('div');
                card.className = 'project-card';
                card.innerHTML = `
                    <div class="project-header">
                        <span class="project-name">${p.nome}</span>
                        <span class="project-type">${p.tipo}</span>
                    </div>
                    <div class="project-status ${statusClass}">${p.status}</div>
                    <div class="project-details">
                        <p>üéØ Vis√£o: ${p.visao}</p>
                        <p>üë§ Respons√°vel: ${p.responsavel}</p>
                        <p>üí∞ Or√ßamento: R$ ${p.orcamento.toLocaleString('pt-BR')}</p>
                        <p>üìÖ Previs√£o: ${p.previsao}</p>
                        <p>üìù ${p.descricao}</p>
                    </div>
                    <div class="project-progress">
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: ${p.progresso}%"></div>
                        </div>
                        <p style="text-align: center; margin-top: 5px;">${p.progresso}% conclu√≠do</p>
                    </div>
                `;
                div.appendChild(card);
            });
        }
        
        // ========== MOSTRAR M√ìDULOS ==========
        function mostrarModulos() {
            const div = document.getElementById('modulos-lista');
            div.innerHTML = '';
            
            modulos.forEach(m => {
                const card = document.createElement('div');
                card.className = 'module-card';
                card.onclick = () => acaoModulo(m.acao);
                card.innerHTML = `
                    <div class="module-icon">${m.icone}</div>
                    <div class="module-name">${m.nome}</div>
                `;
                div.appendChild(card);
            });
        }
        
        // ========== A√á√ïES DOS M√ìDULOS ==========
        function acaoModulo(acao) {
            if (acao === 'hud') {
                window.open('http://localhost:5001/hud', '_blank');
            } else if (acao === 'processar') {
                fetch('/api/processar', {method: 'POST'})
                    .then(() => alert('‚úÖ Processamento iniciado!'));
            } else if (acao === 'legendas') {
                fetch('/api/legendas/criar', {method: 'POST'})
                    .then(() => alert('‚úÖ Legendas geradas!'));
            } else if (acao === 'backup') {
                fetch('/api/backup', {method: 'POST'})
                    .then(() => alert('‚úÖ Backup realizado!'));
            } else {
                alert(`M√≥dulo ${acao} - Em desenvolvimento`);
            }
        }
        
        // ========== CARREGAR V√çDEOS ==========
        async function carregarVideos() {
            try {
                const res = await fetch('/api/videos');
                const videos = await res.json();
                
                const div = document.getElementById('videos-lista');
                div.innerHTML = '';
                
                if (videos.length === 0) {
                    div.innerHTML = '<div style="color: white; text-align: center;">Nenhum v√≠deo encontrado</div>';
                    return;
                }
                
                videos.forEach(v => {
                    const card = document.createElement('div');
                    card.className = 'video-card';
                    card.innerHTML = `
                        <div class="video-thumb">üé¨</div>
                        <div class="video-info">
                            <div class="video-title">${v.nome}</div>
                            <div class="video-type">${v.tipo}</div>
                            <button class="btn" onclick="assistirVideo('${v.caminho}', '${v.nome}')">‚ñ∂Ô∏è Assistir</button>
                        </div>
                    `;
                    div.appendChild(card);
                });
                
            } catch(e) {
                console.log('Erro ao carregar v√≠deos:', e);
            }
        }
        
        // ========== ASSISTIR V√çDEO ==========
        function assistirVideo(caminho, nome) {
            document.getElementById('video-title').innerText = nome;
            document.getElementById('video-player').src = caminho;
            document.getElementById('player-modal').classList.add('active');
        }
        
        // ========== INICIAR ==========
        carregarDados();
        mostrarProjetos();
        mostrarModulos();
        carregarVideos();
        
        // Atualizar a cada 10 segundos
        setInterval(() => {
            carregarDados();
            carregarVideos();
        }, 10000);
    </script>
</body>
</html>
